{
  "expo": {
    "name": "Day with Islam",
    "slug": "day-with-islam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "daywithislam",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.daywithislam.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to calculate accurate prayer times for your area.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to calculate accurate prayer times for your area."
      }
    },
    "android": {
      "package": "com.daywithislam.app",
      "adaptiveIcon": {
        "backgroundColor": "#064E3B",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#064E3B",
          "dark": {
            "backgroundColor": "#0F1419"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Day with Islam to use your location for prayer times.",
          "locationAlwaysPermission": "Allow Day with Islam to use your location for prayer times.",
          "locationWhenInUsePermission": "Allow Day with Islam to use your location for prayer times."
        }
      ],
      "expo-sensors"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
